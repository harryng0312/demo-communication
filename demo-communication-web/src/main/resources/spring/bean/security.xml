    <sec:http auto-config="true" authentication-manager-ref="authManager">
        <sec:intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')"/>
        <sec:form-login login-page="/login" login-processing-url="/j_spring_security_login" default-target-url="/admin"
                        authentication-failure-url="/login?error" always-use-default-target="true"
                        username-parameter="username" password-parameter="password"/>
        <sec:logout logout-url="/j_spring_security_logout" logout-success-url="/logout" delete-cookies="JSESSIONID"
                    invalidate-session="true"/>
        <sec:csrf disabled="false"/>
    </sec:http>
