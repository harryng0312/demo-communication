<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="3.0"
                 xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm https://jakarta.ee/xml/ns/persistence/orm_3_0.xsd">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <access>PROPERTY</access>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <mapped-superclass
            class="org.harryng.demo.impl.base.entity.AbstractModel">
        <attributes>
            <id name="id">
                <column name="id_"/>
                <!-- 				<generated-value strategy="TABLE" generator="seq_default" /> -->
                <!-- <table-generator name="seq_default" allocation-size="1" -->
                <!-- initial-value="1" table="counter" pk-column-name="id" -->
                <!-- pk-column-value="default_id" value-column-name="count" /> -->
            </id>
        </attributes>
    </mapped-superclass>
    <mapped-superclass
            class="org.harryng.demo.impl.base.entity.AbstractStatedModel">
        <attributes>
            <basic name="createdDate">
                <column name="created_date"/>
                <temporal>TIMESTAMP</temporal>
            </basic>
            <basic name="modifiedDate">
                <column name="modified_date"/>
                <temporal>TIMESTAMP</temporal>
            </basic>
            <basic name="status">
                <column name="status"/>
            </basic>
        </attributes>
    </mapped-superclass>

</entity-mappings>
